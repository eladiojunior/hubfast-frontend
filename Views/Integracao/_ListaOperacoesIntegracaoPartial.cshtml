@using hubfast_frontend.Services.Helpers
@model List<OperacaoIntegracaoModel>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">
        Nenuma operação registrada ainda, informe os dados da operação e Grave.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">Método</th>
            <th scope="col">Nome Operação</th>
            <th scope="col">Request</th>
            <th scope="col">Response</th>
            <th scope="col">Ação</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.TipoMetodoOperacao.DescricaoEnum()</th>
                <td>@item.NomeOperacao</td>
                <td>@item.JsonRequest</td>
                <td>@item.JsonResponse</td>
                <td>
                    <a href="#" class="editar-operacao"><i class="icon ion-edit fs-2"></i></a>
                    <a href="#" class="remover-operacao"><i class="icon ion-trash-a fs-2"></i></a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}