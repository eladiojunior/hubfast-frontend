@using hubfast_frontend.Services.Models.Enums
@using hubfast_frontend.Services.Helpers
@model OperacoesIntegracaoViewModel

<div class="container">
    <form id="form-operacao" method="post">
        <input asp-for="IdIntegracao" type="hidden"/>
        <input asp-for="IdOperacao" type="hidden"/>
        <div class="row mt-2">
            <div class="col-2">
                <label for="tipoMetodo" class="form-label">Método</label>
                <select class="form-select" id="tipoMetodo" asp-for="CodigoMetodoOperacao" name="CodigoMetodoOperacao">
                    @foreach (var tipoMetodo in EnumsHelper.ListarEnums<TipoMetodoRestEnum>())
                    {
                        <option value="@tipoMetodo.CodigoEnum()">@tipoMetodo.DescricaoEnum()</option>
                    }
                </select>
            </div>
            <div class="col-10">
                <label for="nomeOperacao" class="form-label">Nome da Operação</label>
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon3">https://hub-integracao.paas.cassi.com.br/v@(Model.VersaoIntegracao)/@(Model.NomeIntegracao)/</span>
                    <input type="text" asp-for="NomeOperacao" class="form-control" id="nomeOperacao" name="NomeOperacao" placeholder="nome_operacao" pattern="[a-zA-Z0-9_\-]+" required="required" autocomplete="off" aria-describedby="basic-addon3">
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-6">
                <label class="fw-bold">Request da Operação</label>
                <div id="jsoneditor_request" class="editor-input"></div>
                <input asp-for="JsonRequestOperacao" name="JsonRequestOperacao" type="hidden"/>
            </div>
            <div class="col-6">
                <label class="fw-bold">Response da Operação</label>
                <div id="jsoneditor_response" class="editor-input"></div>
                <input asp-for="JsonResponseOperacao" name="JsonResponseOperacao" type="hidden"/>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12 text-end">
                <button type="submit" class="btn btn-primary gravar-operacao">Gravar Operação</button>
                @if (Model != null && !string.IsNullOrEmpty(Model.IdOperacao))
                {
                    <button type="button" class="btn btn-secondary nova-operacao">Nova Operação</button>    
                }
            </div>
        </div>
    </form>
    <div class="mt-3 lista-operacoes">
        @{
            Html.RenderPartial("Integracao/_ListaOperacoesIntegracaoPartial", Model.Operacoes);
        }
    </div>
</div>