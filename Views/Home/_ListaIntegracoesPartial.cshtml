@model List<IntegracaoModel>
@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">Nenhuma integração existente, clique em Nova Integração para iniciar.</div>
}
else
{
    foreach (var item in Model)
    {
        <div class="card">
            <div class="card-body">
                <div class="container">
                    <div class="row">
                        <div class="col-5">
                            <h5 class="card-title">Nome Integração: @item.NomeIntegracao</h5>
                            <div class="fs-6 fst-italic">https://hub-integracao.paas.cassi.com.br/v1/<label class="fw-bold">@(item.NomeIntegracao)</label>/{operacao}</div>                            
                            <div class="card-text">Tipo: @item.TipoIntegracao</div>
                        </div>
                        <div class="col-6">
                            <div class="area-checkbox">
                                <div class="checkbox-container">
                                    <div class="checkbox @(item.OpcaoHealthcheck ? "active" : "")"></div>
                                    <label>Healthcheck</label>
                                </div>
                                <div class="checkbox-container">
                                    <div class="checkbox @(item.OpcaoLogService ? "active" : "")"></div>
                                    <label>Log Service</label>
                                </div>
                                <div class="checkbox-container">
                                    <div class="checkbox @(item.OpcaoAuthorization ? "active" : "")"></div>
                                    <label>Authorization</label>
                                </div>
                                <div class="checkbox-container">
                                    <div class="checkbox @(item.OpcaoSwagger ? "active" : "")"></div>
                                    <label>Swagger</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-1">
                            <a asp-action="CarregarEditar" asp-controller="Integracao" asp-route-idIntegracao="@item.IdIntegracao" class="btn btn-primary btn-group">Editar</a>
                            <a asp-action="Remover" asp-controller="Integracao" asp-route-idIntegracao="@item.IdIntegracao" class="btn btn-danger btn-group">Remover</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
