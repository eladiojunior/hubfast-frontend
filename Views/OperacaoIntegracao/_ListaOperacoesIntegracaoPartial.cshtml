@model List<OperacaoIntegracaoModel>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">
        Nenuma operação registrada ainda, informe os dados da operação e Grave.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">Método</th>
            <th scope="col">Nome Operação</th>
            <th scope="col">Request</th>
            <th scope="col">Response</th>
            <th scope="col" class="text-center">Ação</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.TipoMetodoOperacao.DescricaoEnum()</th>
                <td>@item.NomeOperacao</td>
                <td class="text-center">
                    @item.AtributosRequest.Count
                    <a href="#" data-json="@item.JsonRequest" data-tipo="Json Request" class="exibir-json" title="Exibir o JSON da Request">
                        <i class="icon ion-code-working fs-5"></i>
                    </a>
                </td>
                <td class="text-center">
                    @item.AtributosResponse.Count
                    <a href="#" data-json="@item.JsonResponse" data-tipo="Json Response" class="exibir-json" title="Exibir o JSON da Response">
                        <i class="icon ion-code-working fs-5"></i>
                    </a>
                </td>
                <td class="text-center">
                    <a href="#" data-id="@item.IdOperacao" class="editar-operacao" title="Editar operação"><i class="icon ion-edit fs-5"></i></a>
                    <a href="#" data-id="@item.IdOperacao" class="remover-operacao" title="Remover operação"><i class="icon ion-trash-a fs-5"></i></a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div class="modal fade" id="modal_json" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="titulo_modal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titulo_modal">JSON</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    <div id="jsoneditor_view_modal" class="json"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
}